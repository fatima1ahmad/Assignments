<%- include('partials/header') %>

<main class="container mt-4">
  <h1 class="mb-4">New Recipe</h1>
  <form action="/submit-recipe" method="POST" class="recipe-form">

    <input type="text" name="title" class="form-input" placeholder="Title" required>

    <input type="text" name="category" class="form-input" placeholder="Category" required>

    <textarea name="instructions" class="form-input" rows="6" placeholder="Instructions" required></textarea>
    <div class="form-actions">

      <button type="submit" class="submit-btn">Add Recipe</button>
    </div>
  </form>
</main>


<%- include('partials/footer') %>